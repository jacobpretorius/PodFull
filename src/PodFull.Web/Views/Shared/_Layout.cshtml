<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="@(Model.DontIndexPage ? "noindex, follow" : "index, follow")">
    <meta name="description" content="@Model.MetaDescription">
    <link href="/Content/IMG/favicon.ico" rel="icon" type="image/x-icon" />
    <title>@Model.WindowTitle</title>
    <link href="~/Content/CSS/style.css" rel="stylesheet" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
    <header>
        <h1><a href="/">@Model.SiteName</a></h1>
        <em>@Model.TagLine</em>
        <div class="services-links">
            @if (!string.IsNullOrWhiteSpace(Model.RssTitle))
            {
                <a target="_blank" href="@Model.RssUrl">@Model.RssTitle</a>
            }

            @if (!string.IsNullOrWhiteSpace(Model.iTunesTitle) && !string.IsNullOrWhiteSpace(Model.RssTitle))
            {
                <text> | </text>
            }
            @if (!string.IsNullOrWhiteSpace(Model.iTunesTitle))
            {
                <a target="_blank" href="@Model.iTunesUrl">@Model.iTunesTitle</a>
            }
        </div>
    </header>

    <div class="body-container">
        @RenderBody()
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="admin-links">
            <a href="/submit">new post</a> |
            <a href="/admin/settings">settings</a> |
            <a href="/admin/logout">logout</a>
        </div>
    }
</body>
</html>